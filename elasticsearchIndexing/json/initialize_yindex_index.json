{
  "aliases": {
    "yindex-alias": {}
  },
  "settings": {
    "index": {
      "blocks": {
        "read_only_allow_delete": "false"
      },
      "max_ngram_diff": 150,
      "number_of_shards": 3,
      "number_of_replicas": 0
    },
    "analysis": {
      "filter": {
        "synonym": {
          "type": "synonym",
          "synonyms_path": "thesaurus.conf"
        }
      },
      "tokenizer": {
        "ngram": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 40
        }
      },
      "analyzer": {
        "ngram": {
          "tokenizer": "ngram"
        },
        "description_synonym": {
          "tokenizer": "standard",
          "filter": [
            "synonym"
          ]
        },
        "description_lowercase_synonym": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "synonym"
          ]
        },
        "description": {
          "tokenizer": "standard"
        },
        "description_lowercase": {
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "module": {
        "type": "text",
        "analyzer": "ngram",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "organization": {
        "type": "text",
        "analyzer": "ngram",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "argument": {
        "type": "text",
        "analyzer": "ngram"
      },
      "description": {
        "type": "text",
        "analyzer": "description",
        "fields": {
          "lowercase": {
            "type": "text",
            "analyzer": "description_lowercase"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "sdo": {
        "type": "boolean"
      },
      "revision": {
        "type": "date"
      },
      "rfc": {
        "type": "boolean"
      }
    }
  }
}
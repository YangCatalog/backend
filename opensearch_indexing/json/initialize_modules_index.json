{
  "aliases": {
    "modules-alias": {}
  },
  "settings": {
    "index": {
      "blocks": {
        "read_only_allow_delete": "false"
      },
      "max_ngram_diff": 100,
      "number_of_shards": 2,
      "number_of_replicas": 0
    },
    "analysis": {
      "tokenizer": {
        "my_tokenizer": {
          "type": "ngram",
          "min_gram": 1,
          "max_gram": 100
        }
      },
      "analyzer": {
        "my_analyzer_lowercase": {
          "tokenizer": "my_tokenizer",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "module": {
        "type": "text",
        "analyzer": "my_analyzer_lowercase",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "organization": {
        "type": "text",
        "analyzer": "my_analyzer_lowercase",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      }
    }
  }
}